    -fx-font-weight: bold;
    -fx-background-radius: 4;
    -fx-padding: 8 15 8 15;
}
.button:hover { -fx-background-color: derive(-fx-accent, 20%); }
.button:pressed { -fx-background-color: derive(-fx-accent, -10%); }

/* --- TÁBLÁZAT --- */
.table-view { -fx-border-color: #d0d0d0; -fx-border-radius: 4;}
.table-view .column-header .label {
    -fx-text-fill: #212121;
    -fx-font-weight: bold;
}
.table-view .table-cell { -fx-text-fill: #333333; }
.table-view .table-row-cell:selected { -fx-background-color: #b0d9f8; }
.discussed-row .table-cell { -fx-background-color: #d8f5e5; }
.discussed-row:selected .table-cell { -fx-background-color: #b8e5c5; }

/* --- A TE EGYEDI STÍLUSAID --- */
.titleLabel {
    -fx-font-weight: bold;
    -fx-font-size: 24px;
}
.dashboardBox {
    -fx-background-color: -fx-base;
